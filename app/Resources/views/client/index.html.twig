{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    {% block heading %} Gestion des clients <small>Liste</small> {% endblock %}
    {% block subheading %}<i class="fa fa-users"></i> Clients{% endblock %}
   
{% endblock %}
    {% block content %}
    <div class="row">
        <div class="col-lg-12">
            <ul>
                <a class="btn btn-success" href="{{ path('client_new') }}">Ajouter un client</a>
            </ul>
            <table class="table table-hover table-striped .table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Email</th>
                        <th>Mobile</th>
                        <th>Solvable</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for client in clients %}
                    <tr>
                        <td><a href="{{ path('client_show', { 'id': client.id }) }}">{{ client.id }}</a></td>
                        <td>{{ client.nom }}</td>
                        <td>{{ client.prenom }}</td>
                        <td>{{ client.email }}</td>
                        <td>{{ client.mobile }}</td>
                        <td>{% if client.solvable %}oui{% else %}Non{% endif %}</td>
                        <td class="btn-group">
                            <a class="btn btn-info" href="{{ path('client_show', { 'id': client.id }) }}">voir</a>
                            <a class="btn btn-danger" href="{{ path('client_edit', { 'id': client.id }) }}">modifier</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {% endblock %}