<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <!-- Bootstrap Core CSS -->
            <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

            <!-- Custom CSS -->
            <link href="{{ asset('css/sb-admin.css') }}" rel="stylesheet">

            <!-- Morris Charts CSS -->
            <link href="{{ asset('css/plugins/morris.css') }}" rel="stylesheet">

            <!-- Custom Fonts -->
            <link href="{{ asset('font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div id="wrapper">
        {% block body %}
            {% block navigation %}
                    <!-- Navigation -->
                    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="index.html">eTransport</a>
                        </div>
                        <!-- Top Menu Items -->
                        <ul class="nav navbar-right top-nav">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> 
                                {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                                    {{ app.user.username }}
                                {% endif %}
                                 <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="#"><i class="fa fa-fw fa-user"></i> Profile</a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="fa fa-fw fa-envelope"></i> Inbox</a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="fa fa-fw fa-gear"></i> Settings</a>
                                    </li>
                                    <li class="divider"></li>
                                    <li>
                                        <a href="#"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                        <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
                        <div class="collapse navbar-collapse navbar-ex1-collapse">
                            <ul class="nav navbar-nav side-nav" style="bottom: 35px;">
                                <li class="active">
                                    <a href="index.html"><i class="fa fa-fw fa-dashboard"></i> Dashboard</a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.navbar-collapse -->
                    </nav>
            {% endblock %}

            
                <div id="page-wrapper">
                    <div class="container-fluid">

                        <!-- Page Heading -->
                        <div class="row">
                            <div class="col-lg-12">
                                <h1 class="page-header">
                                    {% block heading %} Dashboard <small>Statistics Overview</small> {% endblock %}
                                </h1>
                                <ol class="breadcrumb">
                                    <li class="active">
                                        {% block subheading %}<i class="fa fa-dashboard"></i> Dashboard{% endblock %}
                                    </li>
                                </ol>
                            </div>
                        </div>
                        <!-- /.row -->
                        {% block content %}{% endblock %}
                    </div>
                </div>
            
        </div>
        {% endblock %}
        {% block javascripts %}
             <!-- jQuery -->
            <script src="{{ asset('js/jquery.js') }}"></script>

            <!-- Bootstrap Core JavaScript -->
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>

            <!-- Morris Charts JavaScript -->
            <script src="{{ asset('js/plugins/morris/raphael.min.js') }}"></script>
            <script src="{{ asset('js/plugins/morris/morris.js') }}"></script>
            <script src="{{ asset('js/plugins/morris/morris-data.js') }}"></script>
        {% endblock %}
    </body>
</html>
